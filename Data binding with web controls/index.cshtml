@page
@model CountrySelectorModel
@{
    ViewData["Title"] = "Country Selector";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label for="SelectedCountry">Choose a country:</label>
        <select asp-for="SelectedCountry" asp-items="Model.CountryList">
            <option value="">-- Select --</option>
        </select>
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p><strong>@Model.Message</strong></p>
}
